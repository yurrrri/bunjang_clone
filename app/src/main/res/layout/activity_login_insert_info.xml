<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".src.login.LoginInsertInfoActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:text="생년월일과 성별을 입력해주세요."
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_edt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="휴대폰번호"
        android:inputType="number"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="24sp"
        android:theme="@style/EditTextTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/login_edt_carrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="통신사 선택"
        android:inputType="textPersonName"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="24sp"
        android:theme="@style/EditTextTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_phone" />

    <EditText
        android:id="@+id/login_edt_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:defaultFocusHighlightEnabled="true"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:theme="@style/EditTextTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_reginum_first" />

    <EditText
        android:id="@+id/login_edt_reginum_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:defaultFocusHighlightEnabled="true"
        android:ems="6"
        android:hint="생년월일"
        android:inputType="number"
        android:maxLength="6"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="24sp"
        android:theme="@style/EditTextTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_carrier" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="6dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:text="-"
        android:textColor="@color/bunjang_dark_gray"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/login_edt_reginum_first"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_carrier" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="●●●●●●"
        android:textColor="@color/bunjang_dark_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_carrier" />

    <EditText
        android:id="@+id/login_edt_reginum_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:ems="1"
        android:inputType="number"
        android:maxLength="1"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        android:theme="@style/EditTextTheme"
        app:layout_constraintEnd_toStartOf="@+id/textView18"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/login_edt_carrier" />

    <Button
        android:id="@+id/login_info_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="다음"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>